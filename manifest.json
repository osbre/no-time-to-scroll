{
  "manifest_version": 3,
  "name": "No Time to Scroll",
  "version": "1.0",
  "description": "Blocks Reddit homepage to stop mindless scrolling",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["https://www.reddit.com/"],
  "action": {
    "default_title": "No Time to Scroll"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
